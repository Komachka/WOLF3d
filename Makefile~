
NAME = wolf3d

HEADER = wolf.h

SOURCE_FILES = main.c colour.c print.c additional.c

OBJ = ${SOURCE_FILES:.c = .o}

CFLAGS = -Wall -Wextra -Werror

all: $(NAME)

%.o : %.c $(HEADER)
   @gcc  $(CFLAGS) -c -o $@ $<
   @echo "TEXT"

$(NAME): $(OBJ)
	gcc -o $@ $(OBJ) -lmlx -lXext -lX11 -L ../../minilibx/ -I ../../minilibx/ -lm
	# gcc -o $@ $(OBJ) -L libft -lft libft/libft.a -lmlx -lXext -lX11 -L ../../minilibx/ -I ../../minilibx/ -lm
	
